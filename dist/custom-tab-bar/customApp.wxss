.page-body {
  min-height: 100vh;
}

.modal {
}

.modal-tile {
  padding: 10px 15px;
  font-size: 15px;
  /* border-bottom: 1px solid rgba(0, 0, 0, 0.1); */
}

.modal-con {
  display: flex;
  flex-wrap: wrap;
  min-height: 25vw;
}

.page-send{
  position: fixed;
  right: 10px;
  bottom: 10px;
  border-radius: 100%;
  width: 50px;
  height: 50px;
  background-color: #2f63f4;
  display: flex;
  justify-content: center;
  align-items: center;
}
.page-send:active{
  opacity: 0.8;
}
.page-send>image{
  width: 26px;
  height: 26px;
}
