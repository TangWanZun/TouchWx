.modal-item {
  width: 25vw;
  height: 25vw;
  background-color: rgba(0, 0, 0, 0.03);
  border: 1px solid white;
  padding-top: 2vw;
  position: relative;
}
/* 添加按钮 */
.modal-item-icon{
  position: absolute;
  right: 2px;
  top: 2px;
  width: 5vw;
  height: 5vw;
}



.modal-item>image {
  width: 15vw;
  height: 15vw;
  margin: 0 auto;
  margin-bottom: 1vw;
}

.modal-item-title {
  text-align: center;
  font-size: 13px;
}
