<!-- 首页 -->
<index-view id="INDEX" wx:if="{{selected=='INDEX'}}"></index-view>
<!-- 工作 -->
<work-view id="WORK" wx:elif="{{selected=='WORK'}}"></work-view>
<!-- 消息（客户） -->
<message-view id="MESSAGE" wx:elif="{{selected=='MESSAGE'}}"></message-view>
<!-- 我的 -->
<user-view id="USER" wx:elif="{{selected=='USER'}}"></user-view>
<!-- 背景色 -->
<view class="tab-bar-bg">
  <view class="tab-bar-border"></view>
</view>
<!-- 底部栏 -->
<view class="tab-bar">
  <view wx:for="{{list}}" wx:if="{{item.isShow}}" wx:key="index" class="{{item.isApp?'tab-bar-app':'tab-bar-item'}}">
    <!-- app应用按钮 -->
    <image bindtap="appShow" wx:if="{{item.isApp}}" src="/assets/tabBar/app.png"></image>
    <!-- 普通按钮 -->
    <view wx:else data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
      <image src="{{selected === index ? item.selectedIconPath : item.iconPath}}"></image>
      <view style="color: {{selected === index ? selectedColor : color}}">{{item.text}}</view>
    </view>
  </view>
</view>
<!-- 全部应用列表 -->
<view class="tab-app {{isAppShow?'tab-app-show':''}}" style="padding-top:{{appHeaderHeight}}px">
  <view class="tab-app-body" style="height: calc( 100% - 80px );">
