/**
* 全局css变量
*/

view{
  /* 主要颜色 */
  --mainColor:#2f63f4;
  /* 底部背景颜色 */
  --bodyBg:#f2f2f2;
}

/*
* 通用样式
*/
/* 阴影 */
.app-shadow{
  box-shadow: 0px 0px 15px 1px rgba(0,0,0, 0.08);
}
.app-shadow-2{
  box-shadow: 0px 3px 10px 2px rgba(0,0,0, 0.05);
}
.app-shadow-3{
  box-shadow: 0px 3px 10px 1px rgba(0,0,0, 0.08);
}
/* item下滑分割线 */
.app-item-div{
  border-bottom: 1px solid rgba(0, 0, 0, 0.03);
}
/* body */
.app-body{
  width:100vw;
  min-height: 100vh;
  background-color: rgb(245, 245,245);
}
.page-tabber-body{
  padding-bottom: 70px;
  background-color: #fafafa;
  min-height: 100vh;
}
/*底部加载数据*/
.app-list-loging{
  color: rgba(0, 0, 0, 0.3);
  font-size: 12px;
  padding:20px 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
  position: relative;
}
.app-list-loging>view{
  flex-shrink: 0;
  color: rgba(0, 0, 0, 0.3);
}
@keyframes appListLoging{
  0%{
    transform: rotate(0deg)
  }
  100%{
    transform: rotate(359deg)
  }
}
.app-list-loging>image{
  margin-left: 5px;
  width:15px;
  height: 15px;
  animation: appListLoging 1s;
  animation-iteration-count:infinite;
  animation-timing-function:linear;
  opacity: 0.5;
}
/*
*公共组件
*/
/*颜色*/
.app-main-bg{
  /* 主色 */
  background-color: #256cfa !important;
}
.app-main-bg-5{
  /* 主色 */
  background-color: rgba(78,180,255,0.5);
}
/*app取消滚动条*/
.app-scroll-none::-webkit-scrollbar{
  width: 0;
  height: 0;
}
/* 按钮 */
.app-buttom{
  padding: 5px 15px;
  border-radius: 2px;
  color: white;
  font-size: 13px;
  background-color: #4eb4ff;
}
.app-buttom:active{
  opacity: 0.5;
}
/* 图标变黑色图片变白色 */
.app-filter-btow {
    filter: invert(100%) sepia(35%) saturate(0%) hue-rotate(163deg) brightness(101%) contrast(101%);
}
/*
*   小loding
*/
@keyframes appLoad {
    0%{
        transform: rotate(0deg);
    }
    100%{
        transform: rotate(359deg);
    }
}
.app-load{
  background-size: 100% 100%;
  width:20px;
  height: 20px;
  background-image: url(./assets/icon/jzz.svg);
  animation: appLoad 1s;
  animation-iteration-count:infinite;
  animation-timing-function: linear;
}
