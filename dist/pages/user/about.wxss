/* pages/user/about.wxss */
.page-body{
  min-height: 100vh;
}
.page-icon{
  height: 40vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.page-icon>image{
  width: 100px;
  height: 100px;
  /* border:1px solid rgba(0, 0, 0, 0.05); */
  border-radius: 100%;
  box-shadow: 0px 2px 10px 1px rgba(0, 0, 0, 0.1);
}
.page-name{
  font-size: 20px;
  font-weight: bold;
  text-align: center;
}
.page-v{
  text-align: center;
  margin-top: 10px;
  font-size: 18px;
}
.page-btn{
  margin:0 auto;
  margin-top: 30px;
  width:120px;
  height: 40px;
  line-height: 40px;
  color: white;
  background-color: #2f63f4;
  border-radius: 3px;
  text-align: center;
  font-size: 15px;
}
.page-btn:active{
  opacity: 0.8;
}