/* pages/user/cmpScopeFilter.wxss */
.page-body{
    padding:0 0 70px 0;
}
.item{
    font-size: 15px;

    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    border-left: 1px solid rgba(0, 0, 0, 0.1);
    padding:10px 0;
    padding-left: 20px;
}
.item-con{
    display: flex;
    align-items: center;
}
.item-text{
    flex-grow: 1;
}
.item-right{ 
    width:40vw;
    height: 20px;
    flex-shrink: 0;
    display: flex;
    justify-content: flex-end;
    padding-right: 15px;
}
.item-right>image{
    transform: rotate(-90deg);
    transition: 0.3s;
    width:20px;
    height: 20px;
}
.item-right-show>image{
    transform: rotate(90deg);
}
.button{
    position: fixed;
    left: 0px;
    bottom: 0px;
    width: 100vw;
    padding:0;
    display: flex;
}
.button>button{
    flex-grow: 1;
}
.button>button[type="primary"]{
    background-color: #2f63f4;
}