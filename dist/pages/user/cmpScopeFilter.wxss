/* 侧边栏 */
.side-edge{
    position: fixed;
    z-index: 3;
    top:0;
    left:0;
    width: 100vw;
    height: 100vh;
}
/* 背景蒙版 */
.side-modal{
    position: absolute;
    top:0;
    left:0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
}
/* 正式内容 */
.side-body{
    position: absolute;
    top:0;
    right:0;
    width: 75%;
    height: 100%;
    background-color: white;
}
/* 内容标题 */
.side-body-header{
    background-color: rgba(0, 0, 0, 0.1);
    color: rgba(0, 0, 0, 0.4);
    font-size: 15px;
    padding:10px 15px;
}
/* 主要内容 */
.side-body-main{
    height: calc( 100vh -  110px );
    overflow-y: auto;
}
/* 底部 */
.side-body-footer{
    display: flex;
    padding:15px;
}
.side-body-footer>button{
    flex-grow: 1;
    height: 40px;
    line-height: 40px;
}
.side-body-footer>button[type="primary"]{
    background-color: #2f63f4;
}
/* 筛选类型 */
.side-body-main-item{
    padding:10px 5px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

/* 筛选名称 */
.side-body-main-title{
    font-size: 13px;
    margin-bottom: 10px;
}
.side-body-main-con{
    display: flex;
    flex-wrap: wrap;
    transform: translateX(3px);
}
.side-body-main-con-item{
    width: calc(33.33% - 5px );
    font-size: 13px;
    padding:10px 3px;
    /* flex-grow: 1; */
    flex-shrink: 0;
    border-radius: 3px;
    background-color: rgba(0, 0, 0, 0.1);
    margin-bottom: 5px;
    margin-right: 5px;
    text-align: center;
}
/* 被选中项目 */
.side-body-main-con-item-select{
    background-color: rgba(47, 100, 244, 0.3);
    color: #2f63f4;
    position: relative;
    overflow: hidden;
}
.side-body-main-con-item-select>image{
    position: absolute;
    right: 0;
    bottom: 0;
    width:25px;
    height: 25px;
    transform: rotate(90deg);
}