/* pages/user/myQr.wxss */
.app-body{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
}
.page-box{
  border-radius: 5px;
  width:80vw;
  height: 70vh;
  background-color: white;
  box-shadow: 0 10px 20px 5px rgba(0, 0, 0, 0.08);
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  overflow: hidden;
}
.page-head{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20px;
  flex-shrink: 0;
  position: relative;
  /* border-bottom: 1px solid rgba(0, 0, 0, 0.05); */
}
.page-section{
  position: absolute;
  top: 0px;
  right: 15px;
  padding: 5px 10px;
  padding-bottom: 15px;
  border-radius: 0 0 5px 5px;
  width:32px;
  color: white;
  font-size: 12px;
  /* writing-mode: vertical-rl; */
}
.page-headimg{
  width:15vw;
  height: 15vw;
  border-radius: 100%;
  overflow: hidden;
  margin-right: 10px;
}
.page-body{
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.page-qr{
  width: 50vw;
  height: 50vw;
  padding:2vw;
  background-color: white;
  border:1px solid rgba(0, 0, 0, 0.1);
  border-radius: 5px;
}
/* 是否为绑定顾问 */
.page-canAttribute{
        position: absolute;
        right: 15px;
        bottom: 15px;
        font-size: 13px;
        color:#4eb4ff;
}
/* 加载中 */
@keyframes pageLoad {
    0%{
        transform: rotate(0deg);
    }
    100%{
        transform: rotate(359deg);
    }
}
.page-load{
        width:100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
}
.page-load>image{
        width:30px;
        height: 30px;
        animation: pageLoad 1s;
        animation-iteration-count:infinite;
        animation-timing-function: linear;
}