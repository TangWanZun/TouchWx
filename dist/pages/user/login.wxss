.app-body{
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}
@keyframes loginBox{
  0%{
    box-shadow: none;
  }
  100%{
    box-shadow: 0px 8px 20px 3px rgba(0,0,0, 0.2);
  }
}
.login-box{
  width:80vw;
  height: 70vh;
  margin-top: -10vh;
  border-radius: 5px;
  box-shadow: 0px 3px 10px 1px rgba(0,0,0, 0.08);
  /* animation: loginBox 5s; */
  transition: 1s;
}
.login-box:hover{
  box-shadow: 0px 8px 20px 3px rgba(0,0,0, 0.2);
}