.app-body{
  background-color: white;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}
.app-box{
  width: 200vw;
  height: 100vh;
  display: flex;
  justify-content: space-around;
  align-items: center;
  transition:transform 0.3s;
}
.app-box-show{
  /* will-change:transform; */
  transform: translateX(-100vw)
}
.login-box{
  position: relative;
  width:80vw;
  height: 70vh;
  margin-top: -10vh;
  border-radius: 5px;
  box-shadow: 0px 3px 10px 1px rgba(0,0,0, 0.08);
  /* animation: loginBox 5s; */
  transition: 1s;
  overflow: hidden;
}
.login-box:hover{
  will-change: box-shadow;
  box-shadow: 0px 8px 20px 3px rgba(0,0,0, 0.2);
}
/*右上角切换按钮*/
.login-rts-box{
  position: absolute;
  top: -20vw;
  right:-20vw;
  width:40vw;
  height: 40vw;
  background-color: #4eb4ff;
  transform: rotate(45deg);
  display: flex;
  justify-content: center;
  overflow: hidden;
  z-index: 3;
}
.login-rts-box:active{
  opacity: 0.5;
}
.login-rts-box>image{
  position: relative;
  transform: rotate(-45deg);
  width:18vw;
  height: 18vw;
  top: 27vw;
}
/* 页面内容 */
.login-con{
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  height: 100%;
}
.login-con-head{
  margin-left: 20px;
  margin-top: 20px;
  padding-left: 10px;
  font-size: 20px;
  font-weight: bold;
  border-left: 3px solid #4eb4ff;
}
.login-con-body{
  flex-grow: 1;
  padding: 20px 20px;
  display: flex;
  justify-content: space-around;
  flex-direction: column;

}
.page-input-title{
  font-size: 15px;
  padding-bottom: 5px;
}
.page-input-con{
  border-bottom: 1px solid rgba(0,0,0, 0.08);
  padding:5px 0;
  transition:border-bottom 0.5s;
}
.page-input-con:hover{
  border-bottom: 1px solid #4eb4ff;
}
.page-ground{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.page-buttom{
  flex-shrink: 0;
  border-radius: 50px;
  padding:8px 0;
  margin-left: 10px;
  text-align: center;
  color: white;
  background-color: #4eb4ff;
  transition: 0.2s;
  font-size: 15px;
  width: 80px;
}
.page-buttom-hidden{
  background-color: rgb(247,247,247);
  color: rgb(172, 172, 172)
}

.page-login{
  color: white;
  background-color: #4eb4ff;
  border-radius: 50px;
  text-align: center;
  /* padding:10px 0; */
  transition: 0.2s;
  margin-top: 20px;
  font-size: 15px;
  border:0px;
  height: auto;
  width:100%;
}
.page-login::before{
  content:"";
  border:0px !important;
}
.page-login::after{
  content:"";
  border:0px !important;
}
.page-login:active{
  transform:scale(0.95);
}
