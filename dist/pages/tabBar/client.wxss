.page-body{
  background-color: #fafafa;
  min-height: 100vh;
}
/* 查询 */
.select-box{
  box-sizing: border-box;
  padding:10px 15px;
  background-color: white;
  margin-bottom: 1px;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9;
}
.select-box .select-content{
  height: 35px;
  border-radius: 5px;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  color:#828282;
}
.select-icon{
  width:20px;
  height: 20px;
  margin-right: 10px;
}
.select-text{
  font-size: 16px;
}
/* 无数据 */
.client-none-data{
        height: 100px;
        margin-top: 20px;
        text-align: center;
        opacity: 0.5;
        font-size: 15px;
}
/* 用户列表 */
.client-list{
  /* padding:10px 15px; */
  background-color: white;
  padding-top: 50px;
}
.client-title{
  font-size: 20px;
  font-weight: bold;
  padding:10px 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}
.client-item{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding:0 15px;
  position: relative;
}
.client-img{
  width:50px;
  height: 50px;
  /* position: relative; */
}
/* 认证 */
.client-yc{
  position: absolute;
  width:15px;
  height: 15px;
  bottom: 8px;
  left: 50px;
}
.image{
    width:100%;
    height: 100%;
    border-radius: 100%;
    overflow: hidden;
}
/* 离线头像 */
.client-img-hidden>.image{
  opacity: 0.3;
}
/*在线离线标识符*/
.client-online{
  position: absolute;
  bottom: 0;
  top: 0px;
  left: 0px;
  height: 100%;
  width:5px;
  /* border-radius:0 5px 5px 0; */
  background-color: rgb(93, 236, 148);
}
.client-online-hidden{
  background-color: rgb(236, 93, 93);
}
.client-name{
  flex-grow: 1;
  padding:20px;
  padding-left: 10px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
}
.client-sex{
  width:15px;
  height: 15px;
  margin-right: 8px;
}
.client-name-text{
  font-size: 18px;
  flex-grow: 1;
}
.client-body{
  height: 100vh;
  box-sizing: border-box;
  /* padding:10px 15px; */
  background-color: white;
  padding-top: 50px;
}
.client-body .client-item:last-child .client-name{
  border-bottom:none;
}

