.body{
  background-color: #fafafa;
  min-height: 100vh;
}
/* 查询 */
.select-box{
  box-sizing: border-box;
  padding:10px 15px;
  background-color: white;
  margin-bottom: 1px;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.select-box .select-content{
  height: 35px;
  border-radius: 5px;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  color:#828282;
}
.select-icon{
  width:20px;
  height: 20px;
  margin-right: 10px;
}
.select-text{
  font-size: 16px;
}
/* 用户列表 */
.client-list{
  padding:10px 15px;
  background-color: white;
  padding-top: 50px;
}
.client-title{
  font-size: 20px;
  font-weight: bold;
  padding:10px 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}
.client-item{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.client-img{
  width:60px;
  height: 60px;
  overflow: hidden;
  border-radius: 100%;
}
.client-name{
  font-size: 18px;
  flex-grow: 1;
  padding:25px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}
.client-body .client-item:last-child .client-name{
  border-bottom:none;
}
