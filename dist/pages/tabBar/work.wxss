.work-type-icon {
    width: 35px;
    height: 35px;
    margin: 0 auto;
}

.work-type-title {
    text-align: center;
    font-size: 12px;
}

.work-type {
    flex-shrink: 0;
    flex-grow: 1;
    /* margin-right: 30px; */
}

/* 今日工作 */

.work-list-title {
    font-size: 18px;
    padding-left: 15px;
    padding-top: 85px;
    position: relative;
    /* color: white; */

}

.work-list {
    column-count: 2;
    column-gap: 10px;
    margin: 0 15px;
    padding-top: 5px;
    padding-bottom: 20px;
    position: relative;

}

/* 无工作展示 */

.work-none-data {
    margin-top: 20px;
    height: 100px;
    text-align: center;
    font-size: 15px;
    opacity: 0.5;
}

.work-item-box {
    box-sizing: border-box;
    /* width: 50%; */
    padding: 5px 0;
    break-inside: avoid;

}

.work-item {
    min-height: 80px;
    border-radius: 10px;
    transition: transform 0.1s;
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.08);
    background-color: white;
    box-shadow: 0px 0px 10px 1px rgba(0, 0, 0, 0.05);
}

.work-item-head {
    font-size: 13px;
    padding: 5px 10px;
}

.work-item-body {
    padding: 5px 10px;
}

.work-item-foot {
    /* border-top: 1px solid rgba(255,255,255,0.08); */
    border-top: 1px solid rgba(0, 0, 0, 0.03);
    padding: 5px 10px;
    font-size: 12px;
}

.work-item-headimg {
    width: 25px;
    height: 25px;
    border-radius: 100%;
    margin-right: 10px;
    overflow: hidden;
    flex-shrink: 0;
}

.work-item-name {
    font-size: 14px;
}

