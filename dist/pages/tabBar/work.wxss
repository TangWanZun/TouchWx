

/* 背景 */



/* 工作指标body */

.work-list-body {
    display: flex;
    padding: 0 15px;
    flex-wrap: wrap;
    position: relative;
}

.work-list-body-item {
    width: calc((100vw - 45px) / 3);
    margin-right: 7px;
    margin-bottom: 7px;
    border-radius: 5px;
    border: 1px solid rgba(0, 0, 0, 0.1);
    padding: 15px 10px;
    background-color: white;
    box-shadow: 0px 0px 10px 1px rgba(0, 0, 0, 0.05);
}

.work-list-body-item:nth-child(3n){
    margin-right: 0px;
}

.work-list-body-item-title {
    text-align: center;
    font-size: 13px;
    margin-bottom: 5px;
    color: rgba(0, 0, 0, 0.8);
}

.work-list-body-item-title>span {
    color: rgba(0, 0, 0, 0.5);
}

.work-list-body-item-num {
    text-align: center;
    font-size: 17px;
    font-weight: bold;
}
.work-list-body-item-num>span{
    font-size: 13px;
    color: rgba(0, 0, 0, 0.5);
}

/* 工作类别 */

.work-type-list {
    background-color: white;
    padding: 10px 0;
    display: flex;
    justify-content: space-between;
    overflow: auto;
    position: fixed;
    top: 0px;
    left: 0px;
    width: 100vw;
    z-index: 9;
    -webkit-overflow-scrolling: touch;
}

