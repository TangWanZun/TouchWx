/* 工作类别 */
.work-type-list{
  background-color: white;
  padding:10px 0;
  display: flex;
  justify-content:space-between;
  overflow: auto;
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100vw;
  z-index: 9;
}
/* .work-type-list::after{
  content: "";
  display: block;
  width:10px;
  height: 20px;
  flex-shrink: 0;
} */
.work-type-icon{
  width: 35px;
  height: 35px;
  margin: 0 auto;
}
.work-type-title{
  text-align: center;
  font-size: 12px;
}
.work-type{
  flex-shrink: 0;
  flex-grow: 1;
  /* margin-right: 30px; */
}
/* 今日工作 */
.work-list-title{
  font-size: 18px;
  padding-left: 15px;
  padding-top: 85px;
}
.work-list{
  column-count:2;
  column-gap: 10px;
  margin:0 15px;
  padding-top: 5px;
  padding-bottom: 20px;
}
/* 无工作展示 */
.work-none-data{
        padding:20px;
        height: 200px;
        text-align: center;
        font-size: 15px;
        color: rgba(0,0,0,0.5);
}
.work-none-data>image{
        opacity: 0.2;
}
.work-item-box{
  box-sizing: border-box;
  /* width: 50%; */
  padding:5px 0;
  break-inside: avoid;
}
.work-item{
  min-height: 80px;
  background-color: white;
  border-radius: 2px;
  transition: transform 0.1s;
  overflow: hidden;
  border:1px solid rgba(0,0,0,0.08);
}
.work-item-head{
  font-size: 13px;
  padding:5px 10px;
}

.work-item-body{
  padding:5px 10px;
}
.work-item-foot{
  /* border-top: 1px solid rgba(255,255,255,0.08); */
  border-top: 1px solid rgba(0,0,0,0.03);
  padding:5px 10px;
  font-size: 12px;
}
.work-item-headimg{
  width: 25px;
  height: 25px;
  border-radius: 100%;
  margin-right: 10px;
  overflow: hidden;
  flex-shrink: 0;
}
.work-item-name{
  font-size: 14px;
}
