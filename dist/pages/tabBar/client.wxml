<view class="page-body">
  <!-- 查询栏 -->
  <navigator url="/pages/client/query" class='select-box'>
    <view class='select-content'>
      <view class='select-icon'><image src='/assets/icon/select.svg'></image></view>
      <view class='select-text'>查询</view>
    </view>
  </navigator>
  <!-- 用户列表 -->
  <!-- <view class='client-ltter' wx:for="{{dataList}}" wx:key="{{index}}"> -->
  <!-- <view class='client-title'>{{index}}</view> -->
  <scroll-view scroll-y="true" lower-threshold="50" bindscrolltolower="scrolltolower" class='client-body'>
    <navigator url='/pages/client/clientDetails' class='client-item' wx:for="{{dataList}}" wx:key="{{itemIndex}}">
      <view class='client-img {{item.Online?"":"client-img-hidden"}}'>
        <image src='{{item.ProfilePhoto?imgUrl+item.ProfilePhoto:"/assets/chat/kh_tx.svg"}}'></image>
        <view class='client-online {{item.Online?"":"client-online-hidden"}}'></view>
      </view>
      <view class='client-name'>{{item.CardName?item.CardName:item.NickName}}</view>
    </navigator>
    <view class="list-loging">列表加载完成</view>
  </scroll-view>
</view>