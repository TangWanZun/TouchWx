/* 正文内容 */

.content {
  /* box-shadow: 0 -10px 10px 1px rgba(0, 0, 0, 0.2); */
  /* background-color:red; */
  width: 100vw;
  position: relative;
  z-index: 3;
  padding: 0 15px;
  padding-bottom: 20px;
  padding-top: 1px;
  margin-top: -55px;
}

/*操作功能*/

.fun {
  display: flex;
  flex-wrap: wrap;
  padding:15px 15px 5px 15px !important;
}

.fun-item {
  width: calc( ( 100vw - 120px ) / 3 );
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-bottom: 10px;
}

.fun-item:not(:nth-child(3n)){
  margin-right: 30px;
}


.fun-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}


.fun-item:nth-child(3n) {
  border-right: 0;
}

.fun-item>image {
  width: 340x;
  height: 40px;
}

.fun-text {
  font-size: 13px;
  color: rgba(0, 0, 0, 0.8);
}

/* 模块 */

.content-card {
  margin-top: 10px;
  background-color: white;
  border-radius: 10px;
  box-shadow: 0px 0px 10px 1px rgba(0, 0, 0, 0.05);
  padding: 15px;
}

/* 正文模块标题 */

.content-card-title {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

/*启动吸顶*/

.content-card-title-fixed {
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100vw;
  padding: 0 15px 10px 15px;
  background-color: white;
}

.content-card-title-left {
  font-size: 16px;
  font-weight: bold;
}

.content-card-title-right {
  font-size: 15px;
  color: #244df4;
}

/* 正文模块内容 */

.content-card-body {
  position: relative;
  margin-top: 15px;
  /* padding-top: 10px; */
}

/*联系方式*/
.panel-list{
  display: flex;
}
.panel-item {
  flex-grow: 1;
  width:0;
  height: 60px;
  border-radius: 5px;
  color: white;
  font-size: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.panel-item:active{
  opacity: 0.5;
}
.panel-item:first-child{
  background-color: #41a6ff;
}
.panel-item:last-child{
  background-color: #3fcf77;
  margin-left: 15px;
}
.panel-item>image{
  width:20px;
  height: 20px;
  margin-right: 10px;
}
/*铭牌*/

.nameplate-list {
  display: flex;
  justify-content: flex-start;
  overflow: auto;
  padding: 15px 5px;
  position: relative;
}

/* 加入一个右侧的白色渐变，表示后面还有 */

.nameplate-list-white {
  position: absolute;
  right: 0px;
  height: 100%;
  width: 30px;
  background-image: linear-gradient(90deg, rgba(255, 255, 255, 0) 50%, rgb(255, 255, 255) 100%);
  z-index: 2;
}

.nameplate-list::after {
  content: "";
  display: block;
  width: 10px;
  height: 10px;
  flex-shrink: 0;
}

.nameplate-item {
  width: 30px;
  height: 30px;
  margin-right: 15px;
  flex-shrink: 0;
}

.nameplate-item:active {
  opacity: 0.5;
}

/* 服务顾问 */

.counselor-list {
  display: flex;
  justify-content: flex-start;
  overflow: auto;
  padding: 5px;
}

.counselor-list::after {
  content: "";
  display: block;
  width: 10px;
  height: 10px;
  flex-shrink: 0;
}

.counselor {
  margin-right: 15px;
  border-radius: 10px;
  padding: 10px 30px 10px 10px;
  display: flex;
  justify-content: flex-start;
  align-items: stretch;
}

.counselor-img {
  width: 60px;
  height: 60px;
  border-radius: 100%;
  overflow: hidden;
  margin-right: 10px;
}

/* 服务顾问卡片右侧 */

.counselor-right {
  flex-shrink: 0;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.counselor-name {
  font-size: 15px;
  margin-bottom: 5px;
}

.counselor-career {
  font-size: 14px;
}

.counselor-index {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.6);
}

/* 汽车 */

.car {
  background-image: linear-gradient(24deg, #fb8653 0%, #fb4859 100%);
  border-radius: 10px;
  min-height: 45px;
  position: relative;
  overflow: hidden;
  padding: 10px;
  margin-top: 20px;
}

.car:first-child {
  margin-top: 0;
}

.car-con {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.car-img {
  width: 40px;
  height: 40px;
  border-radius: 100%;
  overflow: hidden;
  background-color: white;
  margin-right: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.car-img>image {
  width: 80%;
  height: 80%;
}

.car-model {
  font-size: 15px;
  color: white;
}

.car-number {
  font-size: 16px;
  color: white;
  font-weight: bold;
  position: absolute;
  right: 10px;
  bottom: 10px;
}

.car-bg {
  position: absolute;
  top: 10px;
  right: -20px;
  width: 40vw;
  height: 40vw;
  opacity: 0.2;
}

/* 是否为授权 */

.car-auth {
  position: absolute;
  left: 0px;
  bottom: 0px;
  width: 60px;
  height: 60px;
}

/* 用户画像 */

.client {
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  position: relative;
  padding: 20px 0 5px 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.client-header {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.client-icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
  opacity: 0.5;
}

.client-title {
  font-size: 15px;
  width: 80px;
}

.client-value {
  font-size: 15px;
  flex-grow: 1;
}

.client-right {
  flex-shrink: 0;
  width: 15px;
}

.client-right>image {
  width: 15px;
  height: 15px;
  display: block;
}

.client-in {
  position: absolute;
  height: 100%;
}
