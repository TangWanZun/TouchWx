/* 查询 */
.select-box{
  box-sizing: border-box;
  padding:10px 15px;
  background-color: white;
  margin-bottom: 1px;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 2;
}
.select-box .select-content{
  height: 35px;
  border-radius: 5px;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content:flex-start;
  padding:0 15px;
}
.select-content input{
  width: 100%;
}
/* 用户列表 */
.select-body{
  padding-top:50px;
  display: none;
}
.select-body-show{
  display: block;
}
.select-item{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: white;
  padding:0 15px;
  position: relative;
}

.select-img{
  width:50px;
  height: 50px;
  overflow: hidden;
  border-radius: 100%;
}
/* 认证 */
.client-yc{
  position: absolute;
  width:28px;
  height: 28px;
  top: 18px;
  right: 10px;
}
/* 离线头像 */
.select-img-hidden>image{
  opacity: 0.3;
}
.select-name{
  font-size: 18px;
  flex-grow: 1;
  padding:20px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}
.select-body .select-item:last-child .select-name{
  border-bottom:none;
}
/* 暂无信息 */
.select-none{
  padding:20px;
  text-align: center;
  background-color: white;
}