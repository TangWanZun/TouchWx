/* pages/client/carStyleSelect.wxss */
.header{
    position: fixed;
    top:0px;
    left:0px;
    width:100vw;
}
.list{
    padding-top: 50px;
}
.item{
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    padding:5px 15px;
}
.item:active{
    opacity: 0.5;
}
.item:nth-child(2n){
    background-color: rgba(0, 0, 0, 0.03);
}
.item view{
    font-size: 15px;
}
.item-top{
    display: flex;
    justify-content: space-between;
    margin-bottom: 5px;
}