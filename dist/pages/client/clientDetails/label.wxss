/* 顶部添加栏 */
.top-box{
        position: fixed;
        top: 0px;
        left:0px;
        width:100vw;
        background-color: white;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.top-input-pla{
        font-size: 13px;
}
.top-input-box{
        font-size: 13px;
        padding-left: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
}
.top-input-box>input{
        flex-grow: 1;
}
.top-button{
        flex-grow: 0;
        border-left: 1px solid rgba(0, 0, 0, 0.1);
        padding:10px 20px;
}
.top-button:active{
        background-color: rgba(0, 0, 0, 0.1);
}
/* 标签列表 */
.dataList{
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        align-content: flex-start;
        align-items: flex-start;
        padding:60px 15px 80px 15px;
        background-color: #f9faf7;
        min-height: 100vh;
}
.item{
        padding:5px 15px;
        border-radius: 30px;
        border:1px solid rgba(0, 0, 0, 0.1);
        margin: 0px 3px 15px 3px;
        display: flex;
        align-items: center;
        font-size: 15px;
        transition:0.3s;
        background-color: white;
}
.item-del{
        box-shadow: 0 0 5px 1px rgba(255, 0, 0, 0.3);
        background-color: rgba(255, 0, 0, 0.3);
}
.item-add{
        box-shadow: 0 0 5px 1px rgba(78,180,255,0.5);
        background-color: rgba(78,180,255,0.5);
}
/* 删除按钮 */
.del-btn{
        position: fixed;
        left: 0px;
        bottom: 0px;
        width:100%;
        height: 50px;
        background-color: red;
        transform: translateY(60px);
        transition: transform 0.2s;
        display: flex;
        justify-content: center;
        align-items: center;
}
.del-btn>image{
        width:50%;
        height: 50%;
}
.del-btn-show{
        transform: translateY(0px);
}
/* 标签库 按钮*/
.label-lib{
        position: fixed;
        right: 10px;
        bottom: 20px;
        width:50px;
        height: 50px;
        border-radius: 100%;
        background-color: #4eb4ff;
        display: flex;
        justify-content: center;
        align-items: center;
}
.label-lib>image{
        width:50%;
        height: 50%;
}
/* 标签库页面 */
.label-lib-box{
        position: fixed;
        width: 100%;
        bottom: 0px;
        left:0px;
        height: 40vh;
        background-color: white;
        border:1px solid rgba(0, 0, 0, 0.1);
        transition: 0.2s;
        transform:translate( 100vw , 50vw) ;
        border-radius: 100%;
        box-shadow: 0 0 10px 1px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: stretch;
}
/* 关闭按钮 */
.label-lib-box-close{
        position: absolute;
        top: -40px;
        right: 10px;
        border:1px solid rgba(0, 0, 0, 0.1);
        border-radius: 100% 100% 0 0;
        height: 40px;
        width: 50px;
        background-color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        box-shadow: 0 -3px 10px 1px rgba(0, 0, 0, 0.1);
}
/* 添加按钮 */
.label-lib-box-add{
        position: absolute;
        top: -40px;
        right: 80px;
        border:1px solid rgba(0, 0, 0, 0.1);
        border-radius: 100% 100% 0 0;
        height: 40px;
        width: 50px;
        background-color: #4eb4ff;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        box-shadow: 0 -3px 10px 1px rgba(0, 0, 0, 0.1);
        transition:transform 0.2s;
        transform: translateY(50px);
}
.label-lib-box-add-show{
        transform: translateY(0px);
}
.label-lib-box-close:active{
        background-color: rgba(0, 0, 0, 0.1);
}
.label-lib-box-show{
        border-radius: 0;
        transform:translate( 0,0) ;
}
.label-left{
        width: 100px;
        flex-shrink: 0;
        border-right: 1px solid rgba(0, 0, 0, 0.1);
        overflow: auto;
}
.label-left-item{
        font-size: 15px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        padding:10px;
        transition: background-color 0.3s;
}
.label-left-item:active{
        background-color: rgba(0, 0, 0, 0.1);
}
.label-left-item-show{
        border-right: 5px solid #4eb4ff;
}
/* 右侧内容 */
.label-right{
        flex-grow: 1;
        position: relative;
        background-color: white;
}
.label-right-item-box{
        display: flex;
        justify-content: flex-start;
        align-items: flex-start;
        align-content: flex-start;
        flex-wrap: wrap;
        padding-top: 20px;
        padding-left: 10px;
        padding-right: 10px;
        overflow: auto;
}

