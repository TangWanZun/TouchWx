.page-body{
        width:100vw;
        height: calc( 100vh - 40px);
        box-sizing:border-box;
        background-color: #f9faf7;
}
/* 顶部栏 */
.page-tap{
        display: flex;
        justify-content: flex-start;
        align-items: center;
        background-color: white;
}
.page-tap-item{
        text-align: center;
        flex-grow: 1;
        font-size: 13px;
        border-bottom:1px solid rgba(0, 0, 0, 0.1);
        transition: border-bottom 0.2s;
        box-sizing: border-box;
        height: 40px;
        line-height: 40px;
}
.page-tap-item-show{
        border-bottom:1px solid #4eb4ff;
        border-right: 1px solid rgba(0, 0, 0, 0.1);
        transition: background-color 0.2s;
}
.page-tap-item-show:active{
        background-color: rgba(0, 0, 0, 0.1);
}
.page-tap-item-show:last-child{
        border-right: 0px;
}
/* 模块 */
.page-module-box{
        padding:10px 0;
}
.page-module{
        width:95vw;
        border-radius: 5px;
        border:1px solid rgba(0, 0, 0, 0.1);
        margin:0 auto;
        padding:10px 15px;
        background-color: white;
}
.page-module-title{
        border-left: 3px solid #4eb4ff;
        font-size: 15px;
        padding-left: 5px;
        margin-top: 5px;
        margin-bottom: 10px;
}
.page-module-title span{
        color: rgba(0, 0, 0, 0.5);
}
/*图片模块*/
.page-img-module{
        border:1px solid rgba(0, 0, 0, 0.1);
        margin:0 auto;
        padding:10px 15px;
        background-color: white;
}
.page-img-module-box{
        padding-top: 20px;
}
/* 按钮 */
.page-button{
        margin-top: 15px;
}
button[type='primary']{
        background-color: #4eb4ff !important;
        transition: background-color 0.3s;
}
button[type='primary']:active{
        opacity: 0.8;
}
button[disabled]{
        background-color: #c0c0c0 !important;
}