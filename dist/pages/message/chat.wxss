/* pages/message/chat.wxss */
.app-main-bg{
  /* 主色 */
  background-color: #4eb4ff !important;
}
.app-center{
  display: flex;
  justify-content: center;
  align-items: center;
}
/*
*===================================
*底部栏
*====================================
*/
.page-foot{
  position: fixed;
  bottom: 0px;
  width: 100vw;
  background-color: white;
  padding-top: 10px;
}

/* 聊天输入框 */
.page-input-box{
  display: flex;
  justify-content: flex-start;
  align-items: stretch;
  padding:0 10px;
}
.page-input{
  /* background-color: white; */
  /* border-radius: 5px; */
  height: 35px;
  padding:10px 15px;
  flex-grow: 1;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  transition:border-bottom 0.3s;
}
.page-input-show{
  border-bottom: 1px solid #4eb4ff;
}
.page-input>input{
  flex-grow: 1;
}
/* 发送按键 */
.page-send{
  width:50px;
  border-radius: 5px;
  margin-left: 10px;
  color: white;
  background-color: rgb(200, 200, 200);
}
/* 功能区 */
.page-funtion{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.page-funtion-item{
  padding:15px 20px 20px 25px;
}
.page-funtion-item>image{
  width:20px;
  height: 20px;
}
/*功能展开区*/
.page-function-unfold{
  height: 0;
  background-color: white;
  position: relative;
  overflow: hidden;
  transition: 0.2s;
}
.page-function-unfold-show{
  height: 40vh;
}
/* 话筒按钮 */
@keyframes voiceActive{
  0%{
    transform: scale(1);
  }
  35%{
    transform: scale(0.9);
  }
  100%{
    transform: scale(1);
  }
}
.page-voice-buttom{
  position: absolute;
  z-index: 2;
  width:18vh;
  height: 18vh;
  border-radius: 100%;
}
.page-voice-buttom-action{
  animation: voiceActive 0.5s;
}
.page-voice-buttom > image{
  width: 60%;
  height: 60%;
}
/* 提示语句 */
.page-voice-hint{
  position: absolute;
  z-index: 2;
  top:5vh;
  left: 0;
  width: 100vw;
  text-align: center;
  color: rgba(0, 0, 0, 0.5);
  font-size: 15px;
}
/*语音取消区域*/
.page-voice-cancel{
  position: absolute;
  left: 0px;
  top: 0px;
  width:calc( 50vw - 10vh );
  height: 100%;
  background-color: rgba(255, 0, 0, 0.3);
  opacity: 0;
  transition: 0.2s;
}
/*语音取消区域-显示*/
.page-voice-cancel-show{
  opacity: 1;
}
/*语音取消区域-高亮*/
.page-voice-cancel-highlight{
  background-color:rgba(255, 0, 0, 0.8);
}
.page-voice-cancel-image{
  width:12vw;
  height: 12vw;
}
