/* pages/work/workActivity/signUp.wxss */
.body{

}
.image{
  width:100%;
}
.title{
  padding:10px 15px;
  font-size: 17px;
}

.card-list{
  display: flex;
  padding:5px 15px;
}
.card-item{
  min-width: 150px;
  border:1px solid rgba(0, 0, 0, 0.1);
  border-radius: 5px;
  box-shadow: 0px 0px 10px 1px rgba(0, 0, 0, 0.1);
  padding:15px;
}
.card-title{
  font-size: 15px;
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}
.card-title::before{
  content:"";
  background-color: var(--mainColor);
  width:13px;
  height: 13px;
  border-radius: 100%;
  display:inline-block;
  margin-right: 10px;
}
.card-number{
  font-size: 20px;
  padding-left: 25px;
}

.list{
  padding:15px 15px;
}
.item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  padding: 5px 0;
}
.item:last-child{
  border-bottom: none;
}
/* 头像 */
.item-image{
  width:50px;
  height: 50px;
  border-radius: 100%;
  overflow: hidden;
  border:2px solid var(--mainColor);
  margin-right: 10px;
  flex-shrink: 0;
}
.item-content{
  flex-grow: 1;
}
/* 用户名称 */
.item-name{
  font-size: 16px;
  margin-bottom: 10px;
}
.item-date{
  font-size: 12px;
  color: rgba(0,0,0,0.5);
}
/* 电话 */
.page-item-phone{
  width:35px;
  height: 35px;
  flex-shrink: 0;

}