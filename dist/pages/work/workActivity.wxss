.page-data-list{
  padding-top:20px;
}
.page-data{
  margin:0 auto 15px auto;
  width:90vw;
  border-radius: 10px;
  overflow: hidden;
  border:1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0px 0px 10px 1px rgba(0, 0, 0, 0.2);
  position: relative;
}

/* 时间 */
.page-data-date{
  padding:0px 20px;
}
.page-date-week{
  font-size: 18px;
  margin-bottom: 5px;
}
.page-date-title{
  font-size: 15px;
  margin-bottom: 5px;
}
.page-data-img{
  width:100%;
  height: 45vw;
}
.page-data-title{
  width:100%;
  font-size: 15px;
  padding:0 10px;
  line-height: 30px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  position: absolute;
  /* background-color: #FFFFFF; */
  background-image: linear-gradient(180deg, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%);
  text-shadow: 0px 0px 2px rgba(255,255,255,1);
  height: 30px;
  margin-top: -30px;
}
.page-data-title::before{
  content: "";
  display: inline-block;
  height:15px;
  width: 3px;
  background-color: var(--mainColor);
}
.page-data-footer{
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: stretch;
  height: 50px;
}
.page-data-btn{
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  border-left:1px solid rgba(0, 0, 0, 0.1);
  font-size: 15px;
}
.page-data-btn:active{
  background-color: rgba(0, 0, 0, 0.05);
}
.page-data-btn:first-child{
  border-left:none;
}

/* 牌子 */
.page-data-state{
  position: absolute;
  right: 0px;
  top: 0px;
  color: white;
  border-radius: 0 10px 0 10px ;
  padding:5px 10px;
  font-size: 15px;
}
/* 未开始 */
.page-data-state-A01{
  background-color: rgb(153, 153, 153);
}
/* 正在进行中 */
.page-data-state-A02{
  background-color: rgb(71, 199, 113);
}
/* 已经结束 */
.page-data-state-A03{
  background-color: rgb(204, 69, 69);
}