/* pages/work/workRescue.wxss */
.page-head{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
}
/* 全选 */
.page-check{
  font-size: 13px;
}
.page-buttom-box{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.page-buttom-box>view:first-child{
  margin-right: 20px;
}
/* 搜索 */
.page-query{
  /* border-top: 1px solid rgba(0, 0, 0, 0.08); */
  border-bottom: 1px solid rgba(0, 0, 0, 0.08);
}
/* 列表 */
.page-item{
  display: flex;
  justify-content: space-between;
  align-items:stretch;
  padding-left: 15px;
  padding-top: 10px;
}
.page-item:last-child .page-item-center{
  border-bottom: none;
}
.page-item-left{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}
.page-item-left>image{
  width: 15vw;
  height: 15vw;
  border-radius: 100%;
}
.page-item-center{
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  flex-grow: 1;
  margin-left: 10px;
  display: flex;
  justify-content:space-between;
  align-items: stretch;
}
.page-item-center-left{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
  align-items: stretch;
}
.page-item-center-con{
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}
.page-item-rescue{
  font-size: 15px;
}
.page-item-date{
  font-size: 13px;
  color: rgba(0, 0, 0, 0.5);
  padding-right: 10px;
}
.page-item-activity{
  font-size: 15px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width:calc( 100vw - 100px );
}
.page-item-num{
  font-size: 13px;
  padding: 10px 0;
}
.page-item-center-right{
  flex-shrink: 0;
  display: flex;
  align-items: center;
  align-content: center;
}