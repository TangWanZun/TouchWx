/* pages/work/workRescue.wxss */
/* 需要隐藏 */
.page-head{
  display: none !important;
}
.page-item-center-right>checkbox{
  display: none !important;
}
.page-head{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
}
/* 全选 */
.page-check{
  font-size: 13px;
}
.page-buttom-box{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.page-buttom-box>view:first-child{
  margin-right: 20px;
}
/* 搜索 */
.page-query{
  /* border-top: 1px solid rgba(0, 0, 0, 0.08); */
  border-bottom: 1px solid rgba(0, 0, 0, 0.08);
}
/* 列表 */
.page-item{
  display: flex;
  justify-content: space-between;
  align-items:stretch;
  padding-left: 15px;
  padding-top: 10px;
}
.page-item:last-child .page-item-center{
  border-bottom: none;
}
.page-item-left{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}
/* 头像下面的文字信息 */
.page-item-rescue{
  font-size: 12px;
}
.page-item-left>image{
  width: 15vw;
  height: 15vw;
  border-radius: 100%;
}
.page-item-center{
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  flex-grow: 1;
  margin-left: 10px;
  display: flex;
  justify-content:flex-start;
  align-items: stretch;
  flex-direction: column;
}
/* 预约头部内容,包括名称  和时间 */
.page-item-center-head{
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}
.page-item-date{
  font-size: 13px;
  color: rgba(0, 0, 0, 0.5);
  padding-right: 10px;
}
/* 预约时间 */
.page-item-make-date{
  font-size: 13px;
}
.page-item-center-body{
  display: flex;
  justify-content: space-between;
}
.page-item-note{
  color: rgba(0, 0, 0, 0.5);
  flex-grow: 1;
  font-size: 12px;
  padding-right:5px;
  margin-top: 5px;
  height: 45px;
  line-height: 15px;
  /* isplay：-webkit-box;
  -webkit-box-orient; */
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
/* 右侧现在使用的是拨打电话按钮 */
.page-item-phone{
  flex-shrink: 0;
  width:45px;
  height: 45px;
  border-radius: 100%;
  margin-right: 10px;
  padding:5px;
}

/* 暂无工作 */
.page-work-none{
  text-align: center;
  font-size: 15px;
  padding:20px;
}