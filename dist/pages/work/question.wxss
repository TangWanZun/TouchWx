.body{
  padding:0px 15px;
}
.item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 15px;
  padding:15px 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.item:active{
  background-color: rgba(0, 0, 0, 0.05);
}
.item>image{
  width:20px;
  height: 20px;
}
/* 弹框 */
.modal-box{
  width:80vw;
  background-color: white;
  border-radius: 5px;
  padding:5vw;
}
.modal-qr{
  width:70vw;
  height: 70vw;
  /* background-color: red; */
  margin:0 auto;
  position: relative;
}
.modal-qr>image{
  width:40px;
  height: 40px;
  margin-left: -20px;
  margin-top: -20px;
  top:50%;
  left:50%;
  position: absolute;
  animation: appListLoging 1s;
  animation-iteration-count:infinite;
  animation-timing-function:linear;
  opacity: 0.5;
}
.modal-title{
  margin-top: 20px;
  font-size: 15px;
  text-align: center;
}