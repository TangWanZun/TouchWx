/* component/queryBox.wxss */
.query-box{
  box-sizing: border-box;
  padding:5px 15px;
  background-color: white;
}
.query-box .query-content{
  height: 30px;
  border-radius: 5px;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  color:#828282;
  padding:0 10px;
}
.query-icon{
  width:20px;
  height: 20px;
  margin-right: 10px;
}
.query-text{
  font-size: 15px;
}
.query-content-input{
  display: flex;
  justify-content: space-between;
}
.query-content-input>input{
  flex-grow: 1;
  color: black;
}