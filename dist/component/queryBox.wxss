/* component/queryBox.wxss */
.query-box{
  box-sizing: border-box;
  padding:5px 15px;
  background-color: white;
}
.query-box .query-content{
  height: 30px;
  border-radius: 5px;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  color:#828282;
  padding-left: 15px;
  padding-right: 10px;
}
@keyframes queryIconTo{
  0%{
    transform: translateX(45vw);
  }
  100%{
    transform: translateX(0);
  }
}
.query-icon-to{
  width:20px;
  height: 20px;
  margin-right: 10px;
  animation: queryIconTo 0.3s;
}
@keyframes queryIconIn{
  0%{
    transform: translateX(-45vw);
  }
  100%{
    transform: translateX(0);
  }
}
.query-icon-in{
  width:20px;
  height: 20px;
  animation: queryIconIn 0.3s;
}
.query-text{
  font-size: 15px;
}
.query-content-input{
  display: flex;
  justify-content: space-between;
}
.query-content-input>input{
  flex-grow: 1;
  color: black;
}