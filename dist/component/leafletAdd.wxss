.updata-img {
    border-radius: 3px;
    display: flex;
    align-items: center;
}

.updata-img-title {
    flex-shrink: 0;
    font-size: 13px;
    margin-right: 10px;
}

.updata-img-body {
    flex-grow: 1;
    height: 130px;
    background-color: rgba(255, 255, 255, 0.1);
    border: 1px dotted rgba(109, 108, 108, 0.5);
    border-radius: 5px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    max-width: 250px;
}

