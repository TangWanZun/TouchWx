.updata-img-body > .idImg {
    height: 100%;
    min-height: 100%;
}

.updata-img-body > .bgImg {
    width: 60%;
}

.updata-img-body-load {
    background-image: none !important;
    background-color: rgba(255, 255, 255, 0.1);
}
/* 图片正在上传中 */
.inLoad {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 14px;
}

/* 删除按钮 */
.item-del {
    position: absolute;
    width: 30px;
    height: 30px;
    right: 0px;
    top: 0px;
    background-color: red;
    border-radius: 100%;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 13px;
}

.item-del:active {
    opacity: 0.5;
}

.item-del::after {
    content: "";
    position: absolute;
    height: 2px;
    background-color: white;
    width: 60%;
    border-radius: 2px;
    transform: rotate(45deg);
}
.item-del::before {
    content: "";
    position: absolute;
    height: 2px;
    background-color: white;
    width: 60%;
    border-radius: 2px;
    transform: rotate(135deg);
}
