/* component/tuiTabBar.wxss */
.tuiTabBar-box{
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 50px;
  /* background-color: #4eb4ff; */
  background-color: white;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  z-index: 3;
}
.tuiTabBar-lest{
  display: flex;
  justify-content: space-around;
  align-items:stretch;
  height: 100%;
}
.tuiTabBar-item{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 50px;
}
.tuiTabBar-item>image{
  width:25px;
  height: 25px;
  margin-bottom: 2px;
}
.tuiTabBar-item>view{
  font-size: 12px;
  text-align: center;
  display: none;
  color: #4eb4ff;
}
.tuiTabBar-item-show{
  flex-shrink: 0;
  width:20%;
}
.tuiTabBar-item-show>view{
  display: block;
}
